@model MapaTriStackdb.Models.HistoricoEquipamento

@{
    ViewData["Title"] = "Excluir Histórico";
}

<h2>@ViewData["Title"]</h2>

<h4>Tem certeza que deseja excluir este registro?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Equipamento</dt>
        <dd class="col-sm-10">@Model.Equipamento?.Descricao</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente?.Nome</dd>

        <dt class="col-sm-2">Data da Leitura</dt>
        <dd class="col-sm-10">@Model.DataLeitura?.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="HistoricoEquipamentoId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
