@model IEnumerable<MapaTriStackdb.Models.HistoricoEquipamento>

@{
    ViewData["Title"] = "Histórico de Equipamentos";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

@if (TempData["Alerta"] != null)
{
    <div class="alerta-moderado mb-3">@TempData["Alerta"]</div>
}

<p>
    <a asp-action="Create"
       style="background:#4CB917; color:white; padding:8px 14px; border-radius:6px; font-weight:600; text-decoration:none;">
        Novo Histórico
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Equipamento</th>
            <th>Cliente</th>
            <th>Temperatura (°C)</th>
            <th>Umidade do Ar (%)</th>
            <th>Nível de Água (%)</th>
            <th>Data da Leitura</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Equipamento?.Descricao</td>
                <td>@item.Cliente?.Nome</td>
                <td>@item.Temperatura</td>
                <td>@item.Ar</td>
                <td>@item.Agua</td>
                <td>@item.DataLeitura?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HistoricoEquipamentoId"
                       style="background:#ffc107; color:#000; padding:5px 10px; border-radius:5px; text-decoration:none; font-weight:600;">
                        Editar
                    </a>

                    <a asp-action="Details" asp-route-id="@item.HistoricoEquipamentoId"
                       style="background:#00b56a; color:white; padding:5px 10px; border-radius:5px; text-decoration:none; font-weight:600; margin-left:4px;">
                        Detalhes
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.HistoricoEquipamentoId"
                       style="background:#ff4d4d; color:white; padding:5px 10px; border-radius:5px; text-decoration:none; font-weight:600; margin-left:4px;">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
