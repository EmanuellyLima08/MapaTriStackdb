@model IEnumerable<MapaTriStackdb.Models.HistoricoEquipamento>

@{
    ViewData["Title"] = "Histórico de Equipamentos";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Alerta"] != null)
{
    <div class="alert alert-warning">@TempData["Alerta"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Histórico</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Equipamento</th>
            <th>Cliente</th>
            <th>Temperatura (°C)</th>
            <th>Umidade do Ar (%)</th>
            <th>Nível de Água (%)</th>
            <th>Data da Leitura</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Equipamento?.Descricao</td>
                <td>@item.Cliente?.Nome</td>
                <td>@item.Temperatura</td>
                <td>@item.Ar</td>
                <td>@item.Agua</td>
                <td>@item.DataLeitura?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HistoricoEquipamentoId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.HistoricoEquipamentoId" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.HistoricoEquipamentoId" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
