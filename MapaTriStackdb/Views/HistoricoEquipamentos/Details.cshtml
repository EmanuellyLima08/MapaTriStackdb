@model MapaTriStackdb.Models.HistoricoEquipamento

@{
    ViewData["Title"] = "Detalhes do Histórico";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Equipamento</dt>
        <dd class="col-sm-10">@Model.Equipamento?.Descricao</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente?.Nome</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Temperatura (°C)</dt>
        <dd class="col-sm-10">@Model.Temperatura</dd>

        <dt class="col-sm-2">Umidade do Ar (%)</dt>
        <dd class="col-sm-10">@Model.Ar</dd>

        <dt class="col-sm-2">Nível de Água (%)</dt>
        <dd class="col-sm-10">@Model.Agua</dd>

        <dt class="col-sm-2">Data da Leitura</dt>
        <dd class="col-sm-10">@Model.DataLeitura?.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.HistoricoEquipamentoId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>
