@model MapaTriStackdb.Models.TipoAlerta

@{
    ViewData["Title"] = "Editar Tipo de Alerta";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-5">

        <form asp-action="Edit" method="post"
              style="background:#ffffff; padding:20px; border-radius:10px;
                     box-shadow:0 2px 6px rgba(0,0,0,0.2);">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="TipoAlertaId" />

            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label" style="font-weight:600;"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group mt-3" style="display:flex; gap:10px;">

                <!-- BOTÃO SALVAR — verde institucional -->
                <button type="submit"
                        style="background:#4CB917; color:white; padding:8px 14px;
                               border:none; border-radius:6px; font-weight:600;">
                    Salvar
                </button>

                <!-- BOTÃO VOLTAR — cinza padrão -->
                <a asp-action="Index"
                   style="background:#6c757d; color:white; padding:8px 14px;
                          border-radius:6px; font-weight:600; text-decoration:none;">
                    Voltar
                </a>

            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
