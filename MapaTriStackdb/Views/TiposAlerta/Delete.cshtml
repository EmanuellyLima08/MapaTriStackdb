@model MapaTriStackdb.Models.TipoAlerta

@{
    ViewData["Title"] = "Excluir Tipo de Alerta";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<!-- ALERTA VERMELHO -->
<div style="
    background:#ff5252;
    color:white;
    padding:12px 18px;
    border-radius:6px;
    margin-bottom:20px;
    font-weight:600;
">
    Tem certeza que deseja excluir este registro?
</div>

<!-- CARD IGUAL O DA FOTO -->
<div style="
    background:white;
    border-radius:10px;
    box-shadow:0 2px 6px rgba(0,0,0,0.2);
    max-width:600px;
    border:1px solid #ddd;
">

    <!-- CABEÇALHO VERDE IGUAL -->
    <div style="
        background:#4CB917;
        color:white;
        padding:12px 18px;
        font-size:20px;
        font-weight:600;
        border-radius:10px 10px 0 0;
    ">
        Informações do Tipo de Alerta
    </div>

    <!-- CORPO DO CARD -->
    <div style="padding:20px; font-size:18px;">

        <!-- DESCRIÇÃO ALINHADA IGUAL -->
        <p style="margin:0 0 12px 0;">
            <strong>Descrição:</strong> @Model.Descricao
        </p>

    </div>

    <!-- RODAPÉ IGUAL AO DO HISTÓRICO -->
    <div style="
        background:#f5f5f5;
        padding:15px;
        border-radius:0 0 10px 10px;
        display:flex;
        gap:12px;
    ">

        <!-- BOTÃO EXCLUIR - VERMELHO IGUAL -->
        <form asp-action="Delete" style="margin:0;">
            <input type="hidden" asp-for="TipoAlertaId" />
            <button type="submit"
                    style="
                    background:#ff6b6b;
                    color:white;
                    border:none;
                    padding:10px 20px;
                    border-radius:6px;
                    font-size:16px;
                    font-weight:600;
                    cursor:pointer;
                ">
                Excluir
            </button>
        </form>

        <!-- CANCELAR - VERDE -->
        <a asp-action="Index"
           style="
                background:#00c06b;
                color:white;
                padding:10px 20px;
                border-radius:6px;
                font-size:16px;
                font-weight:600;
                text-decoration:none;
           ">
            Cancelar
        </a>

    </div>

</div>
