@model IEnumerable<MapaTriStackdb.Models.Equipamento>

@{
    ViewData["Title"] = "Equipamentos";
}

<h1>Equipamentos</h1>

<!-- BLOCO DE ALERTA -->
@if (TempData["Alerta"] != null)
{
    <div class="alert alert-danger text-center fw-bold">
        @TempData["Alerta"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Descrição</th>
            <th>Cliente</th>
            <th>Temperatura</th>
            <th>Ar</th>
            <th>Água</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Vento</th>
            <th>Luz</th>
            <th>Solo</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descricao</td>

                <td>
                    @(item.Cliente != null
                        ? item.Cliente.Nome
                        : "Sem Cliente")
                </td>

                <td>@item.Temperatura</td>
                <td>@item.Ar</td>
                <td>@item.Agua</td>
                <td>@item.Latitude</td>
                <td>@item.Longitude</td>
                <td>@item.Vento</td>
                <td>@item.Luz</td>
                <td>@item.Solo</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.EquipamentoId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.EquipamentoId" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.EquipamentoId" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
