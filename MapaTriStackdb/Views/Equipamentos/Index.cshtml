@model IEnumerable<MapaTriStackdb.Models.Equipamento>

@{
    ViewData["Title"] = "Equipamentos";
}

<h1 class="text-success fw-bold">Equipamentos</h1>

<!-- BLOCO DE ALERTA -->
@if (TempData["Alerta"] != null)
{
    <div class="alert" style="background-color:#ff4d4d; color:white; font-weight:bold; text-align:center;">
        @TempData["Alerta"]
    </div>
}

<p>
    <a asp-action="Create" class="btn" style="background-color:#00b56a; color:white;">Criar Novo</a>
</p>

<table class="table table-bordered" style="border-color: rgba(0,0,0,0.1);">
    <thead style="background-color:#4CB917; color:white;">
        <tr>
            <th>Descrição</th>
            <th>Cliente</th>
            <th>Temperatura</th>
            <th>Ar</th>
            <th>Água</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Vento</th>
            <th>Luz</th>
            <th>Solo</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color:#f5f5f5;">
                <td>@item.Descricao</td>
                <td>@(item.Cliente != null ? item.Cliente.Nome : "Sem Cliente")</td>
                <td>@item.Temperatura</td>
                <td>@item.Ar</td>
                <td>@item.Agua</td>
                <td>@item.Latitude</td>
                <td>@item.Longitude</td>
                <td>@item.Vento</td>
                <td>@item.Luz</td>
                <td>@item.Solo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EquipamentoId"
                       class="btn btn-sm" style="background-color:#ffc107; color:black;">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.EquipamentoId"
                       class="btn btn-sm" style="background-color:#4CB917; color:white;">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.EquipamentoId"
                       class="btn btn-sm" style="background-color:#ff4d4d; color:white;">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Hover das linhas */
    table tbody tr:hover {
        background-color: rgba(0,0,0,0.1);
    }

    /* Linhas alternadas */
    table tbody tr:nth-child(even) {
        background-color: rgba(0,0,0,0.05);
    }

    /* Bordas suaves */
    table, th, td {
        border-radius: 5px;
    }
</style>
