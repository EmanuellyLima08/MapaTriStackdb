@model IEnumerable<MapaTriStackdb.Models.EquipamentoCliente>

@{
    ViewData["Title"] = "Equipamentos de Clientes";
}

<h2 style="color:#4CB917;" class="fw-bold">Equipamentos de Clientes</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn fw-bold" style="background-color:#4CB917; color:#ffffff;">Cadastrar Novo</a>
</div>

<div class="card p-4">
    <table class="table table-striped table-bordered table-hover">
        <thead style="background-color:#4CB917; color:#ffffff;">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Equipamento)</th>
                <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                <th>@Html.DisplayNameFor(model => model.DataCompra)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Equipamento.Descricao)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cliente.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataCompra)</td>
                    <td class="d-flex flex-wrap gap-2">
                        <a asp-action="Edit" asp-route-id="@item.EquipamentoClienteId" class="btn fw-bold" style="background-color:#4CB917; color:#ffffff;">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.EquipamentoClienteId" class="btn fw-bold" style="background-color:#00b56a; color:#ffffff;">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.EquipamentoClienteId" class="btn fw-bold" style="background-color:#ff4d4d; color:#ffffff;">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
