@model MapaTriStackdb.Models.EquipamentoCliente

@{
    ViewData["Title"] = "Cadastrar Equipamento para Usuário";
}

<h2 style="color:#4CB917;" class="fw-bold">Cadastrar Equipamento</h2>

<div class="card p-4 mt-3">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="alerta-critico mb-3"></div>

        <!-- Dropdown de Equipamentos -->
        <div class="form-group mb-3">
            <label asp-for="EquipamentoId" class="fw-bold" style="color:#4CB917;"></label>
            <select asp-for="EquipamentoId" class="form-control" style="border:1px solid #4CB917;" asp-items="ViewBag.EquipamentoId">
                <option value="">-- Selecione um Equipamento --</option>
            </select>
            <span asp-validation-for="EquipamentoId" class="alerta-critico"></span>
        </div>

        <!-- Dropdown de Usuários -->
        <div class="form-group mb-3">
            <label asp-for="ClienteId" class="fw-bold" style="color:#4CB917;"></label>
            <select asp-for="ClienteId" class="form-control" style="border:1px solid #4CB917;" asp-items="ViewBag.ClienteId">
                <option value="">-- Selecione um Usuário --</option>
            </select>
            <span asp-validation-for="ClienteId" class="alerta-critico"></span>
        </div>

        <!-- Data da Compra -->
        <div class="form-group mb-4">
            <label asp-for="DataCompra" class="fw-bold" style="color:#4CB917;"></label>
            <input asp-for="DataCompra" type="date" class="form-control" style="border:1px solid #4CB917;" />
            <span asp-validation-for="DataCompra" class="alerta-critico"></span>
        </div>

        <div class="form-group d-flex">
            <button type="submit" class="btn fw-bold me-2" style="background-color:#4CB917; color:#ffffff;">Salvar</button>
            <a asp-action="Index" class="btn fw-bold" style="background-color:#00b56a; color:#ffffff;">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
