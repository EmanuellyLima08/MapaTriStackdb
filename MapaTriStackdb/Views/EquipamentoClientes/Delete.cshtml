@model MapaTriStackdb.Models.EquipamentoCliente

@{
    ViewData["Title"] = "Excluir Equipamento";
}

<h2 style="color:#4CB917;" class="fw-bold">Excluir Equipamento</h2>

<h4 style="color:#4CB917;" class="fw-bold">Tem certeza que deseja excluir este equipamento?</h4>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3 fw-bold" style="color:#4CB917;">Equipamento</dt>
        <dd class="col-sm-9">@Model.Equipamento?.Descricao</dd>

        <dt class="col-sm-3 fw-bold" style="color:#4CB917;">Cliente</dt>
        <dd class="col-sm-9">@Model.Cliente?.Nome</dd>

        <dt class="col-sm-3 fw-bold" style="color:#4CB917;">Data da Compra</dt>
        <dd class="col-sm-9">@Model.DataCompra.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="EquipamentoClienteId" />
    <div class="d-flex">
        <button type="submit" class="btn fw-bold me-2" style="background-color:#ff4d4d; color:#ffffff;">Excluir</button>
        <a asp-action="Index" class="btn fw-bold" style="background-color:#00b56a; color:#ffffff;">Cancelar</a>
    </div>
</form>
