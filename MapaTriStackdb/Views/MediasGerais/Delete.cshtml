@model MapaTriStackdb.Models.MediaGeral

@{
    ViewData["Title"] = "Excluir Média";
}

<h2 style="font-weight:700; margin-bottom:20px;">Excluir Média</h2>

<div style="
    background:#ffc107;
    color:#000;
    padding:12px 18px;
    border-radius:8px;
    font-weight:600;
    margin-bottom:20px;
">
    Tem certeza que deseja excluir a média deste equipamento?
</div>

<div style="
    background:white;
    border-radius:12px;
    box-shadow:0 2px 6px rgba(0,0,0,0.15);
    overflow:hidden;
">
    <div style="
        background:#4CB917;
        color:white;
        padding:15px 20px;
        font-size:18px;
        font-weight:600;
    ">
        Equipamento: @Model.Equipamento.Descricao
    </div>

    <div style="padding:20px; font-size:15px; color:#333;">
        <p><strong>Cliente:</strong> @Model.Cliente.Nome</p>
        <p><strong>Média Temperatura:</strong> @Model.MediaTemperatura</p>
        <p><strong>Média Umidade Ar:</strong> @Model.MediaAr</p>
        <p><strong>Média Água:</strong> @Model.MediaAgua</p>
        <p><strong>Média Solo:</strong> @Model.MediaSolo</p>
        <p><strong>Média Vento:</strong> @Model.MediaVento</p>
        <p><strong>Média Luz:</strong> @Model.MediaLuz</p>
    </div>

    <div style="
        background:#f5f5f5;
        padding:15px 20px;
        display:flex;
        gap:10px;
        border-top:1px solid rgba(0,0,0,0.1);
    ">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="MediaGeralId" />

            <button type="submit"
                    style="
                    background:#ff4d4d;
                    color:white;
                    padding:8px 14px;
                    border-radius:6px;
                    font-weight:600;
                    border:none;
                    cursor:pointer;
                    transition:0.2s;
                "
                    onmouseover="this.style.background='#d93636'"
                    onmouseout="this.style.background='#ff4d4d'">
                Excluir
            </button>
        </form>

        <a asp-action="Index"
           style="
                background:#4CB917;
                color:white;
                padding:8px 14px;
                border-radius:6px;
                font-weight:600;
                text-decoration:none;
                transition:0.2s;
           "
           onmouseover="this.style.background='#00b56a'"
           onmouseout="this.style.background='#4CB917'">
            Cancelar
        </a>
    </div>
</div>
