@model MapaTriStackdb.Models.MediaGeral

@{
    ViewData["Title"] = "Calcular Média";
}

<h2>Calcular Média de Equipamento</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="EquipamentoId">Equipamento</label>
        <select asp-for="EquipamentoId" class="form-control" asp-items="ViewBag.Equipamentos">
            <option value="">-- Selecione um equipamento --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-2">Calcular Média</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
