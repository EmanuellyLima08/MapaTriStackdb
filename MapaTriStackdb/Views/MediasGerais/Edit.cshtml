@model MapaTriStackdb.Models.MediaGeral

@{
    ViewData["Title"] = "Editar Média";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MediaGeralId" />

    <div class="form-group">
        <label>Equipamento</label>
        <select asp-for="EquipamentoId" class="form-control" asp-items="ViewBag.Equipamentos" disabled>
            <option value="@Model.EquipamentoId">@Model.Equipamento.Descricao</option>
        </select>
        <small class="text-muted">Não é possível alterar o equipamento.</small>
    </div>

    <div class="form-group">
        <label>Temperatura Média</label>
        <input asp-for="MediaTemperatura" class="form-control" />
    </div>

    <div class="form-group">
        <label>Umidade do Ar Média</label>
        <input asp-for="MediaAr" class="form-control" />
    </div>

    <div class="form-group">
        <label>Água Média</label>
        <input asp-for="MediaAgua" class="form-control" />
    </div>

    <div class="form-group">
        <label>Luz Média</label>
        <input asp-for="MediaLuz" class="form-control" />
    </div>

    <div class="form-group">
        <label>Solo Médio</label>
        <input asp-for="MediaSolo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Vento Médio</label>
        <input asp-for="MediaVento" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
