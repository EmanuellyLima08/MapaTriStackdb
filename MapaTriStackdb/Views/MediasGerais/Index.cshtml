@model IEnumerable<MapaTriStackdb.Models.MediaGeral>

@{
    ViewData["Title"] = "Médias Gerais";
}

<h2>Médias Gerais</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Calcular Nova Média</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Equipamento</th>
            <th>Cliente</th>
            <th>Média Temperatura</th>
            <th>Média Umidade Ar</th>
            <th>Média Água</th>
            <th>Média Solo</th>
            <th>Média Vento</th>
            <th>Média Luz</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var media in Model)
        {
            <tr>
                <td>@media.Equipamento.Descricao</td>
                <td>@media.Cliente.Nome</td>
                <td>@media.MediaTemperatura</td>
                <td>@media.MediaAr</td>
                <td>@media.MediaAgua</td>
                <td>@media.MediaSolo</td>
                <td>@media.MediaVento</td>
                <td>@media.MediaLuz</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@media.MediaGeralId">Detalhes</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@media.MediaGeralId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
