@model IEnumerable<MapaTriStackdb.Models.MediaGeral>

@{
    ViewData["Title"] = "Médias Gerais";
}

<h2 class="mb-4">Médias Gerais</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alerta-informativo mb-3">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alerta-critico mb-3">@TempData["ErrorMessage"]</div>
}

<p>
    <a asp-action="Create"
       style="background:#4CB917; color:white; padding:8px 15px; border-radius:6px; font-weight:600; text-decoration:none;"
       class="mb-3">
        Calcular Nova Média
    </a>
</p>

<table class="table tabela-paleta">
    <thead>
        <tr>
            <th>Equipamento</th>
            <th>Cliente</th>
            <th>Média Temperatura</th>
            <th>Média Umidade Ar</th>
            <th>Média Água</th>
            <th>Média Solo</th>
            <th>Média Vento</th>
            <th>Média Luz</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var media in Model)
        {
            <tr>
                <td>@media.Equipamento.Descricao</td>
                <td>@media.Cliente.Nome</td>
                <td>@media.MediaTemperatura</td>
                <td>@media.MediaAr</td>
                <td>@media.MediaAgua</td>
                <td>@media.MediaSolo</td>
                <td>@media.MediaVento</td>
                <td>@media.MediaLuz</td>
                <td>
                    <a asp-action="Details" asp-route-id="@media.MediaGeralId"
                       style="background:#00b56a; color:white; padding:6px 10px; border-radius:6px; text-decoration:none; font-weight:600;"
                       class="btn-sm">
                        Detalhes
                    </a>

                    <a asp-action="Delete" asp-route-id="@media.MediaGeralId"
                       style="background:#ff4d4d; color:white; padding:6px 10px; border-radius:6px; text-decoration:none; font-weight:600; margin-left:4px;"
                       class="btn-sm">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
