@model MapaTriStackdb.Models.MediaGeral

@{
    ViewData["Title"] = "Detalhes da Média";
}

<h2 class="mb-4" style="font-weight:700; color:#333;">Detalhes da Média</h2>

<div style="
    background:white;
    border-radius:12px;
    box-shadow:0 2px 6px rgba(0,0,0,0.15);
    overflow:hidden;
    margin-bottom:20px;
">
    <div style="
        background:#4CB917;
        color:white;
        padding:14px 18px;
        font-size:18px;
        font-weight:700;
    ">
        Equipamento: @Model.Equipamento.Descricao
    </div>

    <div style="padding:20px; font-size:15px; color:#333;">
        <p><strong>Cliente:</strong> @Model.Cliente.Nome</p>
        <p><strong>Média Temperatura:</strong> @Model.MediaTemperatura</p>
        <p><strong>Média Umidade Ar:</strong> @Model.MediaAr</p>
        <p><strong>Média Água:</strong> @Model.MediaAgua</p>
        <p><strong>Média Solo:</strong> @Model.MediaSolo</p>
        <p><strong>Média Vento:</strong> @Model.MediaVento</p>
        <p><strong>Média Luz:</strong> @Model.MediaLuz</p>
    </div>

    <div style="padding:15px; background:#f5f5f5; display:flex; gap:10px;">

        <!-- Botão Verde (Voltar) -->
        <a asp-action="Index"
           style="
               background:#4CB917;
               color:white;
               padding:10px 18px;
               border-radius:8px;
               text-decoration:none;
               font-weight:600;
               transition:0.2s;
           "
           onmouseover="this.style.background='#00b56a'"
           onmouseout="this.style.background='#4CB917'">
            Voltar
        </a>

        <!-- Botão Vermelho (Excluir) -->
        <a asp-action="Delete" asp-route-id="@Model.MediaGeralId"
           style="
               background:#ff4d4d;
               color:white;
               padding:10px 18px;
               border-radius:8px;
               text-decoration:none;
               font-weight:600;
               transition:0.2s;
           "
           onmouseover="this.style.background='#d93636'"
           onmouseout="this.style.background='#ff4d4d'">
            Excluir
        </a>
    </div>
</div>
