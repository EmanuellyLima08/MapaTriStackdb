@model MapaTriStackdb.Models.ConfigAlerta

@{
    ViewData["Title"] = "Editar Configuração";
}

<h2 style="color:#4CB917;" class="fw-bold">Editar Configuração de Alerta</h2>

<div class="card p-4 mt-3">
    <form asp-action="Edit">
        <input type="hidden" asp-for="ConfigAlertaId" />

        <div asp-validation-summary="ModelOnly" class="alerta-critico mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Nome" class="fw-bold" style="color:#4CB917;"></label>
            <input asp-for="Nome" class="form-control" style="border:1px solid #4CB917;" />
            <span asp-validation-for="Nome" class="alerta-critico"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TipoAlertaId" class="fw-bold" style="color:#4CB917;"></label>
            <select asp-for="TipoAlertaId" class="form-control" style="border:1px solid #4CB917;" asp-items="ViewBag.TipoAlertaId"></select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ClienteId" class="fw-bold" style="color:#4CB917;"></label>
            <select asp-for="ClienteId" class="form-control" style="border:1px solid #4CB917;" asp-items="ViewBag.ClienteId"></select>
        </div>

        <hr style="border-color:#4CB917;" />

        <div class="form-group mb-3">
            <label asp-for="TemperaturaLimite" class="fw-bold" style="color:#4CB917;"></label>
            <input asp-for="TemperaturaLimite" class="form-control" style="border:1px solid #4CB917;" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ArLimite" class="fw-bold" style="color:#4CB917;"></label>
            <input asp-for="ArLimite" class="form-control" style="border:1px solid #4CB917;" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="VentoLimite" class="fw-bold" style="color:#4CB917;"></label>
            <input asp-for="VentoLimite" class="form-control" style="border:1px solid #4CB917;" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="AguaLimite" class="fw-bold" style="color:#4CB917;"></label>
            <input asp-for="AguaLimite" class="form-control" style="border:1px solid #4CB917;" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="SoloLimite" class="fw-bold" style="color:#4CB917;"></label>
            <input asp-for="SoloLimite" class="form-control" style="border:1px solid #4CB917;" />
        </div>

        <div class="form-group mb-4">
            <label asp-for="Nivel" class="fw-bold" style="color:#4CB917;"></label>
            <select asp-for="Nivel" class="form-control" style="border:1px solid #4CB917;">
                <option class="alerta-informativo" value="Leve">Leve</option>
                <option class="alerta-moderado" value="Moderado">Moderado</option>
                <option class="alerta-critico" value="Crítico">Crítico</option>
            </select>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn fw-bold me-2" style="background-color:#4CB917; color:#ffffff;">Salvar Alterações</button>
            <a asp-action="Index" class="btn fw-bold" style="background-color:#00b56a; color:#ffffff;">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
