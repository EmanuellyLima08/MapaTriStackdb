@model MapaTriStackdb.Models.ConfigAlerta

@{
    ViewData["Title"] = "Excluir Configuração";
}

<h2>Excluir Configuração</h2>

<h3>Tem certeza que deseja excluir esta configuração?</h3>

<div>
    <h4>@Model.Nome</h4>
    <hr />

    <dl class="row">

        <dt class="col-sm-3">Tipo</dt>
        <dd class="col-sm-9">@Model.TipoAlerta?.Descricao</dd>

        <dt class="col-sm-3">Cliente</dt>
        <dd class="col-sm-9">@Model.Cliente?.Nome</dd>

    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="ConfigAlertaId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
