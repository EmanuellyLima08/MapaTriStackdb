@model IEnumerable<MapaTriStackdb.Models.AlertaEquipamento>

<h2>Alertas de Equipamento</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo Alerta</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Equipamento</th>
            <th>Tipo de Alerta</th>
            <th>Mensagem</th>
            <th>Data</th>
            <th>Cliente</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Equipamento?.Descricao</td>
                <td>@item.TipoAlerta?.Descricao</td>
                <td>@item.Mensagem</td>
                <td>@item.DataAlerta.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Cliente?.Nome</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AlertaEquipamentoId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.AlertaEquipamentoId" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.AlertaEquipamentoId" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
