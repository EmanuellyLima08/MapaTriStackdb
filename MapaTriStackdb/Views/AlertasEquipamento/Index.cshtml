@model IEnumerable<MapaTriStackdb.Models.AlertaEquipamento>

<h2 class="text-dark fw-bold">Alertas de Equipamento</h2>
<hr style="border-color: rgba(0,0,0,0.2);" />

<p>
    <a asp-action="Create" class="btn fw-bold" style="background-color:#00b56a; color:white;">Criar Novo Alerta</a>
</p>

<table class="table table-striped table-bordered">
    <thead style="background-color:#4CB917; color:white;">
        <tr>
            <th>Equipamento</th>
            <th>Tipo de Alerta</th>
            <th>Mensagem</th>
            <th>Data</th>
            <th>Cliente</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Equipamento?.Descricao</td>
                <td>@item.TipoAlerta?.Descricao</td>
                <td>@item.Mensagem</td>
                <td>@item.DataAlerta.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Cliente?.Nome</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AlertaEquipamentoId" class="btn btn-sm fw-bold" style="background-color:#ffc107; color:black;">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.AlertaEquipamentoId" class="btn btn-sm fw-bold" style="background-color:#4CB917; color:white;">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.AlertaEquipamentoId" class="btn btn-sm fw-bold" style="background-color:#ff4d4d; color:white;">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
