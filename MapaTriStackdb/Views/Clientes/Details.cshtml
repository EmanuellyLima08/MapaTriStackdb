@model MapaTriStackdb.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h2>Detalhes do Cliente</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.ClienteId</dd>

        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Equipamentos</dt>
        <dd class="col-sm-9">@Model.Equipamentos?.Count ?? 0</dd>

        <dt class="col-sm-3">Alertas</dt>
        <dd class="col-sm-9">@Model.Alertas?.Count ?? 0</dd>

        <dt class="col-sm-3">Históricos</dt>
        <dd class="col-sm-9">@Model.Historicos?.Count ?? 0</dd>

        <dt class="col-sm-3">Médias Gerais</dt>
        <dd class="col-sm-9">@Model.MediasGerais?.Count ?? 0</dd>
    </dl>
</div>

<br />

<a asp-action="Edit" asp-route-id="@Model.ClienteId" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
