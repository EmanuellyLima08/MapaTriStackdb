@model IEnumerable<MapaTriStackdb.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="mb-4">Clientes</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Cadastrar Novo</a>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Qtd Equipamentos</th>
            <th>Qtd Alertas</th>
            <th>Qtd Histórico</th>
            <th>Qtd Médias</th>
            <th style="width: 200px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Email</td>
                    <td>@(cliente.Equipamentos?.Count ?? 0)</td>
                    <td>@(cliente.Alertas?.Count ?? 0)</td>
                    <td>@(cliente.Historicos?.Count ?? 0)</td>
                    <td>@(cliente.MediasGerais?.Count ?? 0)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@cliente.ClienteId" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@cliente.ClienteId" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@cliente.ClienteId" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Nenhum cliente encontrado.</td>
            </tr>
        }
    </tbody>
</table>
