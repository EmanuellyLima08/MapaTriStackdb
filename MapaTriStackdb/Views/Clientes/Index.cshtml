@model IEnumerable<MapaTriStackdb.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="text-success fw-bold mb-4">Clientes</h1>

<a asp-action="Create" class="btn fw-bold mb-3" style="background-color: #00b56a; color:white;">Cadastrar Novo</a>

<table class="table table-striped table-bordered table-hover">
    <thead style="background-color: #246816; color:white;">
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Qtd Equipamentos</th>
            <th>Qtd Alertas</th>
            <th>Qtd Histórico</th>
            <th>Qtd Médias</th>
            <th style="width: 220px;">Ações</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Email</td>
                    <td>@(cliente.Equipamentos?.Count ?? 0)</td>
                    <td>@(cliente.Alertas?.Count ?? 0)</td>
                    <td>@(cliente.Historicos?.Count ?? 0)</td>
                    <td>@(cliente.MediasGerais?.Count ?? 0)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@cliente.ClienteId" class="btn fw-bold btn-sm" style="background-color: #17a2b8; color:white;">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@cliente.ClienteId" class="btn fw-bold btn-sm" style="background-color: #ffc107; color:white;">Editar</a>
                        <a asp-action="Delete" asp-route-id="@cliente.ClienteId" class="btn fw-bold btn-sm" style="background-color: #dc3545; color:white;">Excluir</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Nenhum cliente encontrado.</td>
            </tr>
        }
    </tbody>
</table>
